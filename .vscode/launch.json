{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Voitta Example (Dev)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/voitta_example.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "python": "${workspaceFolder}/.venv-dev/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/../voitta:${env:PYTHONPATH}"
            }
        },
        {
            "name": "Voitta Example (PyPI)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/voitta_example.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "python": "${workspaceFolder}/.venv-test/bin/python"
        },
        {
            "name": "Filesystem Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/SERVERS/FILESYSTEM/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PORT": "${env:FILESYSTEM_SERVER_PORT}"
            }
        }
    ],
    "compounds": [
        {
            "name": "Voitta (Dev) + Filesystem Server",
            "configurations": [
                "Filesystem Server",
                "Voitta Example (Dev)"
            ]
        },
        {
            "name": "Voitta (PyPI) + Filesystem Server",
            "configurations": [
                "Filesystem Server",
                "Voitta Example (PyPI)"
            ]
        }
    ]
}